var
  w, h: Integer;
begin
   // Dias que faltam para expiração
   If frmPrincipal.store_protect.Dias_RestantesU <= 5 then
    Begin
   ShowMessage('Faltam ' + IntToStr(frmPrincipal.store_protect.Dias_RestantesU) + ' Dias para Expiração do Sistema');
    end;

//  w := Max(ImgTop.Width, imgLeft.Width + PLogin.Width);
